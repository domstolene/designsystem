{
  "name": "@norges-domstoler/dds-formatting",
  "version": "1.3.1",
  "description": "Text formatting functions used in Elsa - domstolenes designsystem",
  "author": "Elsa team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/domstolene/designsystem"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/dds-formatting.cjs",
  "module": "./dist/dds-formatting.js",
  "exports": {
    ".": {
      "import": "./dist/dds-formatting.js",
      "require": "./dist/dds-formatting.cjs"
    }
  },
  "homepage": "https://design.domstol.no",
  "scripts": {
    "clean": "rm -r dist || :",
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint --ext=jsx,ts,tsx src",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build:clean": "npm run clean && npm run build",
    "verify:types": "tsc --noEmit",
    "verify:lint": "npm run lint",
    "verify:prettier": "npm run prettier:check",
    "verify:test": "npm run test",
    "verify": "concurrently 'npm:verify:*'"
  },
  "keywords": [
    "dds",
    "design",
    "formatting",
    "design system",
    "domstolene",
    "norges domstoler",
    "elsa"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.38.1",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vite-plugin-dts": "^1.7.1",
    "vitest": "^0.28.1"
  }
}
