{
  "name": "@norges-domstoler/dds-formatting",
  "version": "1.4.0",
  "description": "Text formatting functions used in Elsa - domstolenes designsystem",
  "author": "Elsa team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/domstolene/designsystem"
  },
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "homepage": "https://design.domstol.no",
  "scripts": {
    "build": "tsup --dts",
    "build:fast": "tsup",
    "dev": "npm run build:fast -- --watch",
    "lint": "eslint --ext=jsx,ts,tsx src",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "verify:types": "tsc --noEmit",
    "verify:lint": "npm run lint",
    "verify:prettier": "npm run prettier:check",
    "verify:test": "npm run test",
    "verify": "concurrently 'npm:verify:*'",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "keywords": [
    "dds",
    "design",
    "formatting",
    "design system",
    "domstolene",
    "norges domstoler",
    "elsa"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.62.0",
    "clean-package": "2.2.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "publishConfig": {
    "provenance": true
  },
  "clean-package": "../../clean-package.config.json"
}
