{
  "name": "@norges-domstoler/dds-formatting",
  "version": "1.3.3",
  "description": "Text formatting functions used in Elsa - domstolenes designsystem",
  "author": "Elsa team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/domstolene/designsystem"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/dds-formatting.cjs",
  "module": "./dist/dds-formatting.js",
  "exports": {
    ".": {
      "import": "./dist/dds-formatting.js",
      "require": "./dist/dds-formatting.cjs"
    }
  },
  "homepage": "https://design.domstol.no",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint --ext=jsx,ts,tsx src",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "verify:types": "tsc --noEmit",
    "verify:lint": "npm run lint",
    "verify:prettier": "npm run prettier:check",
    "verify:test": "npm run test",
    "verify": "concurrently 'npm:verify:*'"
  },
  "keywords": [
    "dds",
    "design",
    "formatting",
    "design system",
    "domstolene",
    "norges domstoler",
    "elsa"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.0",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^2.1.0",
    "vitest": "^0.34.4"
  },
  "publishConfig": {
    "provenance": true
  }
}
