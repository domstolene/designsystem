{
  "name": "@norges-domstoler/designsystem",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for pakker og applikasjoner tilknyttet designsystemet til Norges domstoler",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency 14",
    "build": "turbo run build",
    "build:docs": "turbo run build --filter @norges-domstoler/docs",
    "verify": "turbo run verify",
    "changeset": "changeset",
    "prerelease": "npm run build",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev",
    "release:dev": "changeset publish --tag dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domstolene/designsystem.git"
  },
  "author": "Elsa team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/domstolene/designsystem/issues"
  },
  "homepage": "https://github.com/domstolene/designsystem#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@storybook/react-vite": "^7.0.20",
    "turbo": "^1.10.6"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "volta": {
    "node": "18.16.0",
    "npm": "9.6.7"
  }
}
